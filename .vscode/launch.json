{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Edge",
			"request": "launch",
			"type": "msedge",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/packages/client"
		},
		{
			"name": "Launch Firefox",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/packages/client"
		},
		{
			"name": "Launch Server",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["-s", "server", "start:dev"],
			"console": "integratedTerminal"
		}
	]
}
